<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/optionMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OptionMenu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:src="@drawable/title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/marginTop"
            android:text="Our Menu"
            android:textAllCaps="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/coldDrinks"
                android:layout_marginTop="25dp"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:text="Cold drinks"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@color/ultraPink"/>
            <Button
                android:id="@+id/hotDrinks"
                android:layout_marginTop="25dp"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:text="Hot drinks"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@color/ultraPink"/>
            <Button
                android:id="@+id/sweets"
                android:layout_marginTop="25dp"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:text="Sweets"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@color/ultraPink"/>
            <Button
                android:id="@+id/salties"
                android:layout_marginTop="25dp"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:text="Salties"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@color/ultraPink"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>