<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetalleProducto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_producto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/capuccino"/>

        <TextView
            android:id="@+id/tv_producto"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:paddingLeft="25dp"
            android:text="Cappucino"
            android:textSize="20sp"
            android:textColor="@color/ultraPink"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_precio"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:paddingHorizontal="25dp"
            android:text="Aqui la descripcion de la pelicula"
            android:textColor="@color/violet"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>